<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nijika.mapper.SysClassMapper">
    
    <insert id="insert" parameterType="SysClass" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_class (class_name, counselor_name)
        VALUES (#{className}, #{counselorName})
    </insert>
    
    <delete id="deleteById">
        DELETE FROM sys_class WHERE id = #{id}
    </delete>
    
    <update id="updateById" parameterType="SysClass">
        UPDATE sys_class
        SET class_name = #{className},
            counselor_name = #{counselorName}
        WHERE id = #{id}
    </update>
    
    <select id="selectById" resultType="SysClass">
        SELECT * FROM sys_class WHERE id = #{id}
    </select>
    
    <select id="selectAll" resultType="SysClass">
        SELECT * FROM sys_class ORDER BY created_at DESC
    </select>
    
    <select id="selectByClassName" resultType="SysClass">
        SELECT * FROM sys_class WHERE class_name = #{className}
    </select>
    
</mapper>
